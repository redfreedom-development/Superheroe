<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/imgSuperhero"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />

    <LinearLayout

        android:id="@+id/LinearInteligencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSuperhero"
        android:layout_margin="10dp">

    <TextView
        android:id="@+id/labelInteligencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTELIGENCIA:"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/txtInteligencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="10dp"

        />
        <ProgressBar
            android:id="@+id/barInteligencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100"
            android:layout_marginStart="10dp"



            />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LinearInteligencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="10dp">

        <TextView
            android:id="@+id/labelFuerza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUERZA:"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtFuerza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="10dp"


            />

        <ProgressBar
            android:id="@+id/barFuerza"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100"
            android:layout_marginStart="10dp"



            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>